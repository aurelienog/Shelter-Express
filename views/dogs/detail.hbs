<main class="w-[80%] mx-auto bg-primary-color">

  <header>

    <section class="mx-auto flex flex-col items-center bg-linear">

      <div class="md:grid md:grid-cols-3 gap-8 p-8">
        
        <img src="{{dog.image}}" alt="{{dog.name}}'s photo" class="col-start-1 col-end-3 row-start-1 row-end-2 rounded-lg">

        <div class="flex flex-col justify-between">
          <img src="{{dog.image}}" alt="{{dog.name}}'s photo" class="rounded-lg">
          <img src="{{dog.image}}" alt="{{dog.name}}'s photo" class="rounded-lg">
        </div>     
      </div>

    </section> 

    <section class="bg-slate-200 p-8 my-auto">

      <div class="w-[90%] mx-auto">
      
        <div class="flex justify-between items-center mb-8">

          <div class="flex">
            <h2 class=" text-5xl ">{{dog.name}} {{#if dog.license}}WARNING NEED A LICENSE{{/if}}</h2>
          </div>
          
          {{#isAdmin currentUser}}
          <div class="flex items-center gap-8">
            
            
              <form method="post" action="/dogs/{{../dog.id}}/delete">
                <div class="flex items-center gap-1">
                  <img src="../../assets/remove.svg" alt="" class="w-8">
                  <button type="submit" class="inline-block">Remove</button> 
                </div>  
              </form>
            


              <div class="flex items-center gap-1">
                <img src="../../assets/edit.svg" alt="" class="w-8">
                <a href="/dogs/{{../dog.id}}/update">Edit</a>
              </div>
            
          </div>
          {{/isAdmin}}

        </div>

        <p class="mb-8 leading-6">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugiat nam error voluptatem vero, assumenda ullam voluptatibus dolorum eveniet! Inventore ratione ut mollitia impedit! Ullam at, cum excepturi nemo cupiditate commodi!</p>

        <div class="grid grid-cols-[minmax(300px,_1fr)_auto] gap-8">
          
          <article class="grid grid-cols-2 col-start-1 grid-flow-row gap-2 ">

            <div class="rounded-lg bg-white/60 p-2 flex items-center gap-3">
              <div class="w-12">
                {{#isSex dog "male"}}<img src="../../assets/male.png" alt="" class="w-11 ">{{/isSex}}
                {{#isSex dog "female"}}<img src="../../assets/female.svg" alt="" class="w-12">{{/isSex}}
              </div>
              <div>
                <h3>Sex</h3>
                <p>{{dog.sex}}</p>
              </div>
            </div>

            <div class="rounded-lg bg-white/80 p-2 flex items-center gap-3">
              <div class="w-12">
                <img src="../../assets/age.png" alt="" class="w-10 justify-self-end">
              </div>
              <div>
                <h3>Age</h3>
                <p>{{dog.age}} years old</p>
              </div>
            </div>


            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div class="w-11">
                <img src="../../assets/size.png" alt="" class=" w-11 justify-self-end">
              </div>
              <div>
                <h3>Size</h3>
                <p>{{dog.size}}</p>
              </div>
            </div>

            {{#if dog.weight}}
            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div class="w-11">
                <img src="../../assets/kg.png" alt="" class="w-10">
              </div>
              <div>
                <h3>Weight</h3>
                <p>{{dog.weight}} kg</p>
              </div>
            </div>
            {{/if}}

            {{#if dog.breed}}
            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div class="w-11">
                <img src="../../assets/dog.png" alt="" class="">
              </div>
              <div>
                <h3>Breed</h3>
                <p>{{dog.breed}}</p>
              </div>
            </div>
            {{/if}}

            {{#if dog.idealHome}}
            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div class="w-11">
                <img src="../../assets/homeIdeal.png" alt="" class="">
              </div>
              
              <div>
                <h3>Ideal home</h3>
                <p>{{dog.idealHome}}</p>
              </div>
            </div>
            {{/if}}

            {{#if dog.livingWithChildren}}
            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div >

              </div>
              
              <div>
                <h3>Living with children</h3>
                <p>{{dog.livingWithChildren}}</p>
              </div>
            </div>
            {{/if}}

            {{#if dog.livingWithDogs}}
            <div class="rounded-lg bg-white/80 p-4 flex items-center gap-3">
              <div>

              </div>
              <div>
                <h3>Living with dogs</h3>
                <p>{{dog.livingWithDogs}}</p>
              </div>     
            </div>
            {{/if}}

            {{#if dog.livingWithCats}}
            <div class="rounded-lg bg-white/80 p-4 items-center gap-3">
              <div>

              </div>
              <div>
                <h3>Living with cats</h3>
                <p>{{dog.livingWithCats}}</p>
              </div> 
            </div>                
            {{/if}}

          </article>

          <article class="col-start-2 rounded-lg  bg-white/80 row-span-full justify-items-center p-8 ">
              <h3 class="text-3xl mb-8">Apply to adopt {{dog.name}}</h3>
              <div class="flex flex-col gap-2 my-4">
                <a href="" class="inline-block text-center w-full rounded-lg bg-cta text-white p-4 mb-4">Start your application</a>
                <a href="" class="inline-block text-center w-full rounded-lg border bg-white/80 p-4">Add to favourites</a>
              </div>
          </article>
        </div>
      </div>
    </section>

    <section class="p-8 my-auto">
      <div class="w-[90%] mb-8 mx-auto">
        <h3 class="text-3xl">More about {{dog.name}}:</h3>
        <p>{{dog.about}}</p>
      </div>

    </section>








  


  





  </header>

</main>