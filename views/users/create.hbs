<form method="post" action="/users">
  <div>
  {{#if errors.name}}
    <div>
      {{errors.name.message}}
    </div>
  {{/if}}
  <input name="name" placeholder="name" value="{{user.name}}" class="{{#if errors.name}}border-red-600 border-4{{/if}}">
  </div>
  <div>
    {{#if errors.email}}
      <div>
        {{errors.email.message}}
      </div>
    {{/if}}
    <input name="email" type="email" placeholder="email" value="{{user.email}}" class="{{#if errors.email}}border-red-600 border-4{{/if}}">  
  </div>
  
  <div>
    {{#if errors.password}}
    <div>
      {{errors.password.message}}
    </div>
    {{/if}}
    <input name="password" type="password" placeholder="password" class="{{#if errors.password}}border-red-600 border-4{{/if}}">
  </div>
    
  <button type="submit">Submit</button>
</form>