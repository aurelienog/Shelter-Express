<a href="/users/create">New</a>

  <form method="post" action="/users">
    <div>
      {{#if errors.email}}
      <div>
        {{errors.email.message}}
      </div>
      {{/if}}
      <input name="email" type="email" placeholder="email" value="{{user.email}}"
        class="{{#if errors.email}}border-red-600 border-4{{/if}}">
    </div>
  
    <div>
      {{#if errors.password}}
      <div>
        {{errors.password.message}}
      </div>
      {{/if}}
      <input name="password" type="password" placeholder="password"
        class="{{#if errors.password}}border-red-600 border-4{{/if}}">
    </div>
  
    <button type="submit">Submit</button>
  </form>
  
  <h2>{{#each users as |user|}}
    <a href="/users/{{user.id}}">{{user.name}}</a>
    {{/each}}
  </h2>


